***Table Delete****
DROP TABLE facality;

***Table create***
CREATE TABLE student(
    id int,
    name varchar(20),
    dept varchar(10),
    primary key(id)
);

***Add column***
ALTER TABLE student
ADD COLUMN tution int;

***Delete Column ***
ALTER TABLE facality
DROP salary;

***Value inset***
INSERT INTO student
VALUES (101,"MD Nasim Reza","CSE",13000),
(102,"MD Aziz","CSE",11000),
(103,"MD Sajed","CSE",14000),
(104,"MD. Feroz","CSE",10000),
