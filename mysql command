***Table Delete****
DROP TABLE facality;

***Table create***
CREATE TABLE student(
    id int,
    name varchar(20),
    dept varchar(10),
    primary key(id)
);

***Add column***
ALTER TABLE student
ADD COLUMN tution int;

***Delete Column ***
ALTER TABLE facality
DROP salary;

